<%- include('partials/headerGuest') %>

<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Features - Energy Ease</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    /* Hero Features Section */
    .hero {
      position: relative;
      width: 100%;
      height: 100vh;
      background: url('images/labtekback.png') no-repeat center center/cover;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      color: black;
    }

    .hero .intro {
      background-color: rgba(255, 255, 255, 0.7);
      padding: 20px;
      border-radius: 12px;
      margin-bottom: 30px;
    }

    .features {
      display: flex;
      justify-content: center;
      gap: 60px;
      flex-wrap: wrap;
    }

    .feature {
      text-align: center;
      max-width: 180px;
    }

    .feature img {
      width: 100px;
      height: 100px;
      margin-bottom: 10px;
    }

    .feature p {
      font-size: 18px;
      font-weight: bold;
      margin-top: 5px;
    }

    @media (max-width: 768px) {
      .nav-links a {
        font-size: 18px;
      }

      .feature img {
        width: 80px;
        height: 80px;
      }

      .feature p {
        font-size: 16px;
      }
    }
  </style>
</head>
<body>

  <!-- Hero Feature Section -->
  <div class="hero">
    <div class="intro">
      <h2><strong>Features</strong></h2>
      <p>Fitur yang tersedia pada alat:</p>
    </div>
    <div class="features">
      <div class="feature">
        <img src="images/meter.png" alt="Data Pengukuran">
        <p>Data Pengukuran</p>
      </div>
      <div class="feature">
        <img src="images/iot.png" alt="Kontrol berbasis IoT">
        <p>Kontrol berbasis IoT</p>
      </div>
      <div class="feature">
        <img src="images/realtime.png" alt="Realtime">
        <p>Realtime</p>
      </div>
    </div>
  </div>

</body>
</html>
