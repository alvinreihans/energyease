<style>
  /* ================= SIDEBAR (desktop/tablet) ================= */
  .sidebar {
    width: 250px;
    background-color: var(--secondary-color);
    padding: 20px;
    display: flex;
    flex-direction: column;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
    z-index: 100;
  }

  .sidebar .logo-text {
    color: white;
    font-weight: 600;
    font-size: 24px;
    margin-bottom: 40px;
    text-align: center;
  }

  .sidebar nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar nav ul li {
    margin-bottom: 10px;
  }

  .sidebar nav ul li a {
    color: var(--light-text);
    text-decoration: none;
    font-size: 16px;
    display: flex;
    align-items: center;
    padding: 12px 15px;
    border-radius: 8px;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .sidebar nav ul li a i {
    margin-right: 15px;
    font-size: 20px;
  }

  .sidebar nav ul li a:hover,
  .sidebar nav ul li a.active {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
  }

  /* ================= BOTTOM NAV (mobile) ================= */
  .bottom-nav {
    display: none;
  }

  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }

    body {
      margin-left: 0 !important; /* hilangkan margin sidebar */
      padding-bottom: 80px; /* beri ruang untuk floating nav */
    }

    .bottom-nav {
      display: flex;
      position: fixed;
      bottom: 15px;
      left: 50%;
      transform: translateX(-50%);
      width: 90%;
      max-width: 500px;
      height: 60px;
      background-color: var(--secondary-color);
      justify-content: space-around;
      align-items: center;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      border-radius: 15px;
      z-index: 200;
    }

    .bottom-nav a {
      flex: 1;
      color: var(--light-text);
      text-align: center;
      font-size: 12px;
      text-decoration: none;
      padding: 6px 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: color 0.3s;
    }

    .bottom-nav a i {
      font-size: 18px;
      margin-bottom: 3px;
    }

    .bottom-nav a.active,
    .bottom-nav a:hover {
      color: white;
    }
  }

  html,
  body {
    max-width: 100%;
  }

  .main-content {
    width: 100%;
    box-sizing: border-box;
    overflow-x: hidden;
  }

  @media (max-width: 768px) {
    body {
      margin-left: 0 !important;
    }

    .sidebar {
      display: none;
    }

    .bottom-nav {
      width: calc(100% - 20px); /* kasih sedikit margin biar floating */
      left: 50%;
      transform: translateX(-50%);
      max-width: 100%;
      box-sizing: border-box;
    }
  }
</style>

<!-- Sidebar untuk desktop & tablet -->
