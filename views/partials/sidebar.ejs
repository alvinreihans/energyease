<style>
  /* ================= SIDEBAR (desktop/tablet) ================= */
  .sidebar {
    width: 250px;
    background-color: var(--secondary-color);
    padding: 20px;
    display: flex;
    flex-direction: column;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
    z-index: 100;
  }

  .sidebar .logo-text {
    color: white;
    font-weight: 600;
    font-size: 24px;
    margin-bottom: 40px;
    text-align: center;
  }

  .sidebar nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar nav ul li {
    margin-bottom: 10px;
  }

  .sidebar nav ul li a {
    color: var(--light-text);
    text-decoration: none;
    font-size: 16px;
    display: flex;
    align-items: center;
    padding: 12px 15px;
    border-radius: 8px;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .sidebar nav ul li a i {
    margin-right: 15px;
    font-size: 20px;
  }

  .sidebar nav ul li a:hover,
  .sidebar nav ul li a.active {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .sidebar .logout-link {
    text-decoration: none;
    color: var(--light-text);
    display: block;
    padding: 12px 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .sidebar .logout-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
  }

  /* ================= BOTTOM NAV (mobile) ================= */
  .bottom-nav {
    display: none;
  }

  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }

    body {
      margin-left: 0 !important; /* hilangkan margin sidebar */
      padding-bottom: 80px; /* beri ruang untuk floating nav */
    }

    .bottom-nav {
      display: flex;
      position: fixed;
      bottom: 15px;
      left: 50%;
      transform: translateX(-50%);
      width: 90%;
      max-width: 500px;
      height: 60px;
      background-color: var(--secondary-color);
      justify-content: space-around;
      align-items: center;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      border-radius: 15px;
      z-index: 200;
    }

    .bottom-nav a {
      flex: 1;
      color: var(--light-text);
      text-align: center;
      font-size: 12px;
      text-decoration: none;
      padding: 6px 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: color 0.3s;
    }

    .bottom-nav a i {
      font-size: 18px;
      margin-bottom: 3px;
    }

    .bottom-nav a.active,
    .bottom-nav a:hover {
      color: white;
    }
  }

  /* ================= LOGOUT MODAL ================= */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
  }

  .modal-content {
    background-color: var(--card-bg-color);
    padding: 30px;
    border-radius: 12px;
    text-align: center;
    box-shadow: var(--shadow);
    max-width: 400px;
    width: 90%;
  }

  .modal-content p {
    font-size: 18px;
    margin-bottom: 25px;
    color: var(--secondary-color);
  }

  .modal-actions {
    display: flex;
    justify-content: center;
    gap: 15px;
  }

  .modal-actions button {
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  #confirm-logout {
    background-color: #e74c3c;
    color: white;
  }

  #confirm-logout:hover {
    background-color: #c0392b;
  }

  #cancel-logout {
    background-color: #ecf0f1;
    color: var(--secondary-color);
  }

  #cancel-logout:hover {
    background-color: #bdc3c7;
  }

  html,
  body {
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  .main-content {
    width: 100%;
    box-sizing: border-box;
    overflow-x: hidden;
  }

  @media (max-width: 768px) {
    body {
      margin-left: 0 !important;
    }

    .sidebar {
      display: none;
    }

    .bottom-nav {
      width: calc(100% - 20px); /* kasih sedikit margin biar floating */
      left: 50%;
      transform: translateX(-50%);
      max-width: 100%;
      box-sizing: border-box;
    }
  }
</style>

<!-- Sidebar untuk desktop & tablet -->
<div class="sidebar">
  <div class="logo-text">Energy Ease</div>
  <nav>
    <ul>
      <li>
        <a
          href="/dashboard"
          class="<%= activePage === 'dashboard' ? 'active' : '' %>"
          ><i class="fas fa-home"></i> Dashboard</a
        >
      </li>
      <li>
        <a href="/ike" class="<%= activePage === 'ike' ? 'active' : '' %>"
          ><i class="fas fa-chart-bar"></i> Analisis IKE</a
        >
      </li>
      <li>
        <a
          href="/control-panel"
          class="<%= activePage === 'control' ? 'active' : '' %>"
          ><i class="fas fa-cogs"></i> Kontrol Panel</a
        >
      </li>
      <li>
        <a
          href="/history"
          class="<%= activePage === 'history' ? 'active' : '' %>"
          ><i class="fas fa-history"></i> Riwayat Data</a
        >
      </li>
    </ul>
  </nav>
  <a href="/logout" id="logout-button" class="logout-link"
    ><i class="fas fa-sign-out-alt"></i> Logout</a
  >
</div>

<!-- Bottom Navbar untuk mobile -->
<div class="bottom-nav">
  <a href="/dashboard" class="<%= activePage === 'dashboard' ? 'active' : '' %>"
    ><i class="fas fa-home"></i><span>Dashboard</span></a
  >
  <a href="/ike" class="<%= activePage === 'ike' ? 'active' : '' %>"
    ><i class="fas fa-chart-bar"></i><span>IKE</span></a
  >
  <a
    href="/control-panel"
    class="<%= activePage === 'control' ? 'active' : '' %>"
    ><i class="fas fa-cogs"></i><span>Kontrol</span></a
  >
  <a href="/history" class="<%= activePage === 'history' ? 'active' : '' %>"
    ><i class="fas fa-history"></i><span>Riwayat</span></a
  >
</div>

<!-- Modal Konfirmasi Logout -->
<div id="logout-modal" class="modal">
  <div class="modal-content">
    <p>Apakah Anda yakin ingin keluar?</p>
    <div class="modal-actions">
      <button id="confirm-logout">Ya, Keluar</button>
      <button id="cancel-logout">Batal</button>
    </div>
  </div>
</div>

<script>
  const logoutButton = document.getElementById('logout-button');
  const logoutModal = document.getElementById('logout-modal');
  const confirmLogoutButton = document.getElementById('confirm-logout');
  const cancelLogoutButton = document.getElementById('cancel-logout');

  if (logoutButton) {
    logoutButton.addEventListener('click', function (e) {
      e.preventDefault();
      logoutModal.style.display = 'flex';
    });
  }

  if (confirmLogoutButton) {
    confirmLogoutButton.addEventListener('click', function () {
      window.location.href = '/logout';
    });
  }

  if (cancelLogoutButton) {
    cancelLogoutButton.addEventListener('click', function () {
      logoutModal.style.display = 'none';
    });
  }
</script>
