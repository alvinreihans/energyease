    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/paho-mqtt/1.0.1/mqttws31.min.js"
      type="text/javascript"></script>
    <script>
      // Konfigurasi koneksi MQTT
      const brokerUrl = 'broker.hivemq.com';
      const port = 8000; // Gunakan port 8000 untuk koneksi WebSocket
      const clientId = 'mqttjs_' + Math.random().toString(16).substr(2, 8);

      // Buat klien MQTT
      const client = new Paho.MQTT.Client(
        brokerUrl,
        Number(port),
        '/mqtt',
        clientId
      );

      // Fungsi untuk koneksi
      function connect() {
        client.connect({
          onSuccess: onConnect,
          onFailure: onFailure,
        });
      }

      // Handler saat koneksi berhasil
      function onConnect() {
        console.log('✅ Connected to MQTT broker');
        // Subscribe ke topik status untuk menerima update
        const devices = [
          'ac1',
          'ac2',
          'ac3',
          'lampu1',
          'lampu2',
          'lampu3',
          'lampu4',
          'lampu5',
        ];
        devices.forEach((device) => {
          client.subscribe(`energyease/status/${device}`);
        });
      }

      // Handler saat koneksi gagal
      function onFailure(responseObject) {
        console.error(
          '❌ Failed to connect to MQTT broker: ',
          responseObject.errorMessage
        );
      }

      // Handler saat pesan diterima
      client.onMessageArrived = function (message) {
        const topic = message.destinationName;
        const status = message.payloadString;
        const deviceId = topic.split('/').pop();
        console.log(`[MQTT] Received status update for ${deviceId}: ${status}`);
        updateDeviceStatus(deviceId, status);
      };

      // Handler saat koneksi terputus
      client.onConnectionLost = function (responseObject) {
        if (responseObject.reconnect) {
          console.log('❌ Connection lost. Reconnecting...');
          setTimeout(connect, 3000); // Coba terhubung kembali setelah 3 detik
        }
      };

      // Fungsi untuk mengirim pesan perintah
      function publishMessage(deviceId, command) {
        if (client.isConnected()) {
          const topic = `energyease/command/${deviceId}`;
          const message = new Paho.MQTT.Message(command);
          message.destinationName = topic;
          client.send(message);
          console.log(
            `[MQTT] Published command '${command}' to topic '${topic}'`
          );
        } else {
          console.error(
            '❌ Not connected to MQTT broker. Cannot publish message.'
          );
        }
      }

      // Fungsi untuk mengupdate UI berdasarkan status
      function updateDeviceStatus(deviceId, status) {
        const statusElement = document.getElementById(`status-${deviceId}`);
        if (statusElement) {
          statusElement.textContent = status.toUpperCase();
          if (status.toUpperCase() === 'ON') {
            statusElement.classList.remove('off');
            statusElement.classList.add('on');
          } else {
            statusElement.classList.remove('on');
            statusElement.classList.add('off');
          }
        }
      }

      // Jalankan koneksi saat halaman selesai dimuat
      document.addEventListener('DOMContentLoaded', connect);
    </script>
