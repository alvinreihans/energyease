<%- include('partials/headerGuest') %>

<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Daftar Akun - Energy Ease</title>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      height: 100%;
      background: url('images/labtekback.png') no-repeat center center/cover;
    }

    /* Register Section */
    .register-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: calc(100% - 70px);
      text-align: center;
      padding: 20px;
    }

    .register-title {
      font-size: 28px;
      font-weight: bold;
      color: white;
      text-shadow: 1px 1px 3px black;
    }

    .register-subtitle {
      font-size: 16px;
      color: white;
      margin-bottom: 30px;
      text-shadow: 1px 1px 2px black;
    }

    .form-box {
      background-color: rgba(255, 255, 255, 0.85);
      padding: 30px 25px;
      border-radius: 15px;
      width: 300px;
      box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }

    .form-box input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: none;
      border-radius: 25px;
      background-color: white;
      font-size: 14px;
    }

    .form-box button {
      width: 100%;
      padding: 12px;
      margin-top: 15px;
      background-color: green;
      color: white;
      font-size: 16px;
      font-weight: bold;
      border: none;
      border-radius: 25px;
      cursor: pointer;
    }

    .form-box .login-link {
      margin-top: 15px;
      font-size: 14px;
    }

    .form-box .login-link a {
      color: #1a4dd7;
      text-decoration: none;
      font-weight: bold;
    }

    .form-box .login-link a:hover {
      text-decoration: underline;
    }

    .error-message {
      color: red;
      font-size: 14px;
    }
  </style>
</head>
<body>

  <!-- Register Form -->
  <div class="register-container">
    <div class="register-title">Energy Management System<br>Based by IoT</div>
    <div class="register-subtitle">Sistem Manajemen Energi berbasis IoT</div>

    <form class="form-box" method="POST" action="/register">
      <% if (error) { %>
        <div class="error-message"><%= error %></div>
      <% } %>
      <p>Daftar akun baru</p>
      <input name="email" type="email" placeholder="Email" required /><br />
      <input name="password" type="password" placeholder="Password" required /><br />
      <button type="submit">Daftar</button>
      <div class="login-link">
        Sudah punya akun? <a href="/login">Login</a>
      </div>
    </form>
  </div>

</body>
</html>
