<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Masuk - Energy Ease</title>
    <style>
      /* === Global Styles === */
      body {
        margin: 0;
        font-family: sans-serif;
        background-color: #f0f2f5;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        color: #333;
      }

      /* === Back Button === */
      .back-link {
        position: absolute;
        top: 20px;
        left: 20px;
        text-decoration: none;
        font-weight: bold;
        color: #2c3e50;
        background-color: #ffffff;
        padding: 8px 16px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
      }

      .back-link:hover {
        background-color: #3498db;
        color: #fff;
      }

      /* === Page Title === */
      .page-title {
        font-size: 48px;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 30px;
      }

      /* === Login Container === */
      .login-container {
        width: 100%;
        max-width: 400px;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      .login-title {
        font-size: 28px;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 25px;
      }

      /* === Message Alerts === */
      .error-message {
        color: #e74c3c;
        background-color: #fdeded;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        border: 1px solid #e74c3c;
      }

      .success-message {
        color: #27ae60;
        background-color: #e8f6f3;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        border: 1px solid #27ae60;
      }

      /* === Form Box === */
      .form-box {
        text-align: left;
        width: 100%;
        max-width: 380px;
      }

      .form-box p {
        font-size: 16px;
        color: #555;
        margin-bottom: 20px;
        text-align: center;
      }

      .form-box label {
        display: block;
        font-size: 14px;
        color: #333;
        margin-top: 15px;
        margin-bottom: 5px;
        font-weight: bold;
      }

      .form-box input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        box-sizing: border-box;
      }

      .form-box input:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
      }

      .form-box button {
        width: 100%;
        padding: 12px;
        font-size: 18px;
        font-weight: bold;
        color: #fff;
        background-color: #3498db;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 20px;
      }

      .form-box button:hover {
        background-color: #2980b9;
      }

      /* === Register Link === */
      .register-link {
        margin-top: 20px;
        font-size: 14px;
        color: #777;
        text-align: center;
      }

      .register-link a {
        color: #3498db;
        text-decoration: none;
        font-weight: bold;
      }

      .register-link a:hover {
        text-decoration: underline;
      }

      /* === Responsive Styles === */
      @media (max-width: 768px) {
        .page-title {
          font-size: 32px;
        }

        .login-container {
          padding: 20px;
          width: 90%;
        }

        .form-box input,
        .form-box button {
          font-size: 14px;
          padding: 10px;
        }
      }

      @media (max-width: 480px) {
        .page-title {
          font-size: 26px;
        }

        .login-container {
          padding: 15px;
        }

        .form-box label {
          font-size: 13px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Ubah semua href menjadi dinamis -->
    <a href="<%= baseUrl %>/" class="back-link">&larr; Kembali ke Beranda</a>

    <h1 class="page-title">Masuk</h1>

    <div class="login-container">
      <div class="login-title">Energy Ease</div>

      <div class="form-box">
        <% 
          let message = '';
          if (success == 'register_success') {
              message = 'Pendaftaran akun berhasil. Silakan masuk untuk melanjutkan.';
          } else if (success == 'logout_success') {
              message = 'Anda telah keluar.';
          } else if (error == 'user_not_found') {
              message = 'Akun tidak ditemukan';
          } else if (error == 'wrong_password') {
              message = 'Kata sandi salah.';
          } else if (error == 'unauthenticated') {
            message = 'Silakan masuk terlebih dahulu.'
          }
        %>

        <% if (message) { %>
        <div class="<%= success ? 'success-message' : 'error-message' %>">
          <%= message %>
        </div>
        <% } %>

        <p>Masuk ke akun Anda</p>

        <!-- Gunakan baseUrl untuk form action -->
        <form action="<%= baseUrl %>/login" method="POST">
          <label for="identifier">Email atau Nama Pengguna</label>
          <input
            type="text"
            name="identifier"
            id="identifier"
            required />

          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            required />

          <button type="submit">Masuk</button>
        </form>

        <div class="register-link">
          Tidak punya akun?
          <a href="<%= baseUrl %>/register">Daftar</a>
        </div>
      </div>
    </div>
  </body>
</html>
