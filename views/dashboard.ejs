<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Energy Ease</title>
    <style>
      /* CSS umum dan layout dashboard */
      @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');
      :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --background-color: #f4f7f9;
        --card-bg-color: #ffffff;
        --text-color: #555;
        --light-text: #bdc3c7;
        --border-color: #e0e6ed;
        --shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      }

      body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--background-color);
        margin: 0;
        display: flex;
        min-height: 100vh;
        color: var(--text-color);
        margin-left: 280px;
      }

      .main-content {
        flex: 1;
        padding: 30px;
        overflow-y: auto;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
      }

      .header h1 {
        font-size: 32px;
        font-weight: 600;
        color: var(--secondary-color);
        margin: 0;
      }

      .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
      }

      .user-info .user-name {
        font-size: 16px;
        font-weight: 500;
        color: var(--secondary-color);
      }

      .user-info .avatar {
        width: 40px;
        height: 40px;
        background-color: #ecf0f1;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--secondary-color);
      }

      /* Gaya Blok Dashboard */
      .dashboard-block {
        background-color: var(--card-bg-color);
        border-radius: 12px;
        padding: 25px;
        box-shadow: var(--shadow);
        margin-bottom: 25px;
      }

      .block-header {
        font-size: 22px;
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 20px;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 10px;
      }

      .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        text-align: center;
      }

      .summary-item {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
      }

      .summary-item .title {
        font-size: 16px;
        font-weight: 500;
        color: var(--text-color);
      }

      .summary-item .value {
        font-size: 28px;
        font-weight: 600;
        color: var(--primary-color);
      }

      .summary-item .unit {
        font-size: 14px;
        color: #95a5a6;
      }

      .phase-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
      }

      .phase-block {
        background-color: var(--card-bg-color);
        border-radius: 12px;
        padding: 25px;
        box-shadow: var(--shadow);
      }

      .phase-header {
        font-size: 20px;
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 20px;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 10px;
        text-align: center;
      }

      .phase-data {
        display: flex;
        flex-direction: column;
        gap: 15px;
      }

      .data-row {
        display: flex;
        justify-content: space-between;
        font-size: 16px;
        padding: 5px 0;
      }

      .data-row .label {
        font-weight: 500;
        color: var(--text-color);
      }

      .data-row .value {
        font-weight: 600;
        color: var(--primary-color);
      }
    </style>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </head>
  <body>
    <%- include('partials/sidebar') %>

    <div class="main-content">
      <div class="header">
        <h1>DASHBOARD</h1>
        <div class="user-info">
          <span class="user-name">Halo, User!</span>
          <div class="avatar"><i class="fas fa-user"></i></div>
        </div>
      </div>

      <div class="dashboard-block summary-grid">
        <div class="summary-item">
          <div class="title">Energi Aktif</div>
          <div class="value" id="energy-active">-</div>
          <div class="unit">kWh</div>
        </div>
        <div class="summary-item">
          <div class="title">Energi Reaktif</div>
          <div class="value" id="energy-reactive">-</div>
          <div class="unit">kVarh</div>
        </div>
        <div class="summary-item">
          <div class="title">Faktor Daya Total</div>
          <div class="value" id="total-power-factor">-</div>
          <div class="unit">PF</div>
        </div>
        <div class="summary-item">
          <div class="title">Daya Aktif Total</div>
          <div class="value" id="power-active-total">-</div>
          <div class="unit">W</div>
        </div>
        <div class="summary-item">
          <div class="title">Daya Reaktif Total</div>
          <div class="value" id="power-reactive-total">-</div>
          <div class="unit">Var</div>
        </div>
        <div class="summary-item">
          <div class="title">Daya Semu Total</div>
          <div class="value" id="power-apparent-total">-</div>
          <div class="unit">VA</div>
        </div>
      </div>

      <div class="dashboard-block phase-grid">
        <div class="phase-block">
          <h4 class="phase-header">Fasa R</h4>
          <div class="phase-data">
            <div class="data-row">
              <span class="label">Tegangan:</span>
              <span class="value" id="voltage-a">- V</span>
            </div>
            <div class="data-row">
              <span class="label">Arus:</span>
              <span class="value" id="current-a">- A</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Aktif:</span>
              <span class="value" id="power-active-r">- W</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Reaktif:</span>
              <span class="value" id="power-reactive-r">- Var</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Semu:</span>
              <span class="value" id="power-apparent-r">- VA</span>
            </div>
            <div class="data-row">
              <span class="label">Faktor Daya:</span>
              <span class="value" id="power-factor-r">- PF</span>
            </div>
          </div>
        </div>

        <div class="phase-block">
          <h4 class="phase-header">Fasa S</h4>
          <div class="phase-data">
            <div class="data-row">
              <span class="label">Tegangan:</span>
              <span class="value" id="voltage-b">- V</span>
            </div>
            <div class="data-row">
              <span class="label">Arus:</span>
              <span class="value" id="current-b">- A</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Aktif:</span>
              <span class="value" id="power-active-s">- W</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Reaktif:</span>
              <span class="value" id="power-reactive-s">- Var</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Semu:</span>
              <span class="value" id="power-apparent-s">- VA</span>
            </div>
            <div class="data-row">
              <span class="label">Faktor Daya:</span>
              <span class="value" id="power-factor-s">- PF</span>
            </div>
          </div>
        </div>

        <div class="phase-block">
          <h4 class="phase-header">Fasa T</h4>
          <div class="phase-data">
            <div class="data-row">
              <span class="label">Tegangan:</span>
              <span class="value" id="voltage-c">- V</span>
            </div>
            <div class="data-row">
              <span class="label">Arus:</span>
              <span class="value" id="current-c">- A</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Aktif:</span>
              <span class="value" id="power-active-t">- W</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Reaktif:</span>
              <span class="value" id="power-reactive-t">- Var</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Semu:</span>
              <span class="value" id="power-apparent-t">- VA</span>
            </div>
            <div class="data-row">
              <span class="label">Faktor Daya:</span>
              <span class="value" id="power-factor-t">- PF</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      const socket = io();

      socket.on('sensor-data', (data) => {
        // Update Ringkasan Utama
        document.getElementById(
          'energy-active'
        ).textContent = `${data.energyActive}`;
        document.getElementById(
          'energy-reactive'
        ).textContent = `${data.energyReactive}`;
        document.getElementById(
          'total-power-factor'
        ).textContent = `${data.totalPowerFactor}`;
        document.getElementById(
          'power-active-total'
        ).textContent = `${data.powerActiveTotal}`;
        document.getElementById(
          'power-reactive-total'
        ).textContent = `${data.powerReactiveTotal}`;
        document.getElementById(
          'power-apparent-total'
        ).textContent = `${data.powerApparentTotal}`;

        // Update Data Fasa R
        document.getElementById('voltage-a').textContent = `${data.voltageA} V`;
        document.getElementById('current-a').textContent = `${data.currentA} A`;
        document.getElementById(
          'power-active-r'
        ).textContent = `${data.powerActiveR} W`;
        document.getElementById(
          'power-reactive-r'
        ).textContent = `${data.powerReactiveR} Var`;
        document.getElementById(
          'power-apparent-r'
        ).textContent = `${data.powerApparentR} VA`;
        document.getElementById(
          'power-factor-r'
        ).textContent = `${data.powerFactorR} PF`;

        // Update Data Fasa S
        document.getElementById('voltage-b').textContent = `${data.voltageB} V`;
        document.getElementById('current-b').textContent = `${data.currentB} A`;
        document.getElementById(
          'power-active-s'
        ).textContent = `${data.powerActiveS} W`;
        document.getElementById(
          'power-reactive-s'
        ).textContent = `${data.powerReactiveS} Var`;
        document.getElementById(
          'power-apparent-s'
        ).textContent = `${data.powerApparentS} VA`;
        document.getElementById(
          'power-factor-s'
        ).textContent = `${data.powerFactorS} PF`;

        // Update Data Fasa T
        document.getElementById('voltage-c').textContent = `${data.voltageC} V`;
        document.getElementById('current-c').textContent = `${data.currentC} A`;
        document.getElementById(
          'power-active-t'
        ).textContent = `${data.powerActiveT} W`;
        document.getElementById(
          'power-reactive-t'
        ).textContent = `${data.powerReactiveT} Var`;
        document.getElementById(
          'power-apparent-t'
        ).textContent = `${data.powerApparentT} VA`;
        document.getElementById(
          'power-factor-t'
        ).textContent = `${data.powerFactorT} PF`;
      });
    </script>
  </body>
</html>
