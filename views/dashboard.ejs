<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Energy Ease</title>
    <style>
      /* CSS umum dan layout dashboard */
      @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');
      :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --background-color: #f4f7f9;
        --card-bg-color: #ffffff;
        --text-color: #555;
        --light-text: #bdc3c7;
        --border-color: #e0e6ed;
        --shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      }

      body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--background-color);
        margin: 0;
        display: flex;
        min-height: 100vh;
        color: var(--text-color);
        margin-left: 280px;
      }

      .main-content {
        flex: 1;
        padding: 30px;
        overflow-y: auto;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
      }

      .header h1 {
        font-size: 32px;
        font-weight: 600;
        color: var(--secondary-color);
        margin: 0;
      }

      /* Gaya Blok Dashboard */
      .dashboard-block {
        background-color: var(--card-bg-color);
        border-radius: 12px;
        padding: 25px;
        box-shadow: var(--shadow);
        margin-bottom: 25px;
      }

      .block-header {
        font-size: 22px;
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 20px;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 10px;
      }

      .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        text-align: center;
      }

      .summary-item {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
      }

      .summary-item .title {
        font-size: 16px;
        font-weight: 500;
        color: var(--text-color);
      }

      .summary-item .value {
        font-size: 28px;
        font-weight: 600;
        color: var(--primary-color);
      }

      .summary-item .unit {
        font-size: 14px;
        color: #95a5a6;
      }

      .phase-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
      }

      .phase-block {
        background-color: var(--card-bg-color);
        border-radius: 12px;
        padding: 25px;
        box-shadow: var(--shadow);
      }

      .phase-header {
        font-size: 20px;
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 20px;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 10px;
        text-align: center;
      }

      .phase-data {
        display: flex;
        flex-direction: column;
        gap: 15px;
      }

      .data-row {
        display: flex;
        justify-content: space-between;
        font-size: 16px;
        padding: 5px 0;
      }

      .data-row .label {
        font-weight: 500;
        color: var(--text-color);
      }

      .data-row .value {
        font-weight: 600;
        color: var(--primary-color);
      }
    </style>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </head>
  <body>
    <%- include('partials/sidebar') %>

    <div class="main-content">
      <div class="header">
        <h1>DASHBOARD</h1>
        <%- include('partials/logout') %>
      </div>

      <div class="dashboard-block summary-grid">
        <div class="summary-item">
          <div class="title">Energi Aktif</div>
          <div class="value" id="energy-active">-</div>
          <div class="unit">kWh</div>
        </div>
        <div class="summary-item">
          <div class="title">Energi Reaktif</div>
          <div class="value" id="energy-reactive">-</div>
          <div class="unit">kVarh</div>
        </div>
        <div class="summary-item">
          <div class="title">Faktor Daya Total</div>
          <div class="value" id="total-power-factor">-</div>
          <div class="unit">PF</div>
        </div>
        <div class="summary-item">
          <div class="title">Daya Aktif Total</div>
          <div class="value" id="power-active-total">-</div>
          <div class="unit">W</div>
        </div>
        <div class="summary-item">
          <div class="title">Daya Reaktif Total</div>
          <div class="value" id="power-reactive-total">-</div>
          <div class="unit">Var</div>
        </div>
        <div class="summary-item">
          <div class="title">Daya Semu Total</div>
          <div class="value" id="power-apparent-total">-</div>
          <div class="unit">VA</div>
        </div>
      </div>

      <div class="dashboard-block phase-grid">
        <div class="phase-block">
          <h4 class="phase-header">Fasa R</h4>
          <div class="phase-data">
            <div class="data-row">
              <span class="label">Tegangan:</span>
              <span class="value" id="voltage-r">- V</span>
            </div>
            <div class="data-row">
              <span class="label">Arus:</span>
              <span class="value" id="current-r">- A</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Aktif:</span>
              <span class="value" id="power-active-r">- W</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Reaktif:</span>
              <span class="value" id="power-reactive-r">- Var</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Semu:</span>
              <span class="value" id="power-apparent-r">- VA</span>
            </div>
            <div class="data-row">
              <span class="label">Faktor Daya:</span>
              <span class="value" id="power-factor-r">- PF</span>
            </div>
          </div>
        </div>

        <div class="phase-block">
          <h4 class="phase-header">Fasa S</h4>
          <div class="phase-data">
            <div class="data-row">
              <span class="label">Tegangan:</span>
              <span class="value" id="voltage-s">- V</span>
            </div>
            <div class="data-row">
              <span class="label">Arus:</span>
              <span class="value" id="current-s">- A</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Aktif:</span>
              <span class="value" id="power-active-s">- W</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Reaktif:</span>
              <span class="value" id="power-reactive-s">- Var</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Semu:</span>
              <span class="value" id="power-apparent-s">- VA</span>
            </div>
            <div class="data-row">
              <span class="label">Faktor Daya:</span>
              <span class="value" id="power-factor-s">- PF</span>
            </div>
          </div>
        </div>

        <div class="phase-block">
          <h4 class="phase-header">Fasa T</h4>
          <div class="phase-data">
            <div class="data-row">
              <span class="label">Tegangan:</span>
              <span class="value" id="voltage-t">- V</span>
            </div>
            <div class="data-row">
              <span class="label">Arus:</span>
              <span class="value" id="current-t">- A</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Aktif:</span>
              <span class="value" id="power-active-t">- W</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Reaktif:</span>
              <span class="value" id="power-reactive-t">- Var</span>
            </div>
            <div class="data-row">
              <span class="label">Daya Semu:</span>
              <span class="value" id="power-apparent-t">- VA</span>
            </div>
            <div class="data-row">
              <span class="label">Faktor Daya:</span>
              <span class="value" id="power-factor-t">- PF</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();

      // Helper untuk format angka
      function formatNumber(value, decimals = 2, unit = '') {
        const num = Number(value);
        if (isNaN(num)) return '-';
        return `${num.toFixed(decimals)}${unit ? ' ' + unit : ''}`;
      }

      socket.on('sensor-data', (data) => {
        // Ringkasan Utama
        document.getElementById('energy-active').textContent = formatNumber(
          data.energyActive
        );
        document.getElementById('energy-reactive').textContent = formatNumber(
          data.energyReactive
        );
        document.getElementById('total-power-factor').textContent =
          formatNumber(data.totalPowerFactor);
        document.getElementById('power-active-total').textContent =
          formatNumber(data.powerActiveTotal);
        document.getElementById('power-reactive-total').textContent =
          formatNumber(data.powerReactiveTotal);
        document.getElementById('power-apparent-total').textContent =
          formatNumber(data.powerApparentTotal);

        // Fasa R
        document.getElementById('voltage-r').textContent = formatNumber(
          data.voltageR,
          2,
          'V'
        );
        document.getElementById('current-r').textContent = formatNumber(
          data.currentR,
          2,
          'A'
        );
        document.getElementById('power-active-r').textContent = formatNumber(
          data.powerActiveR,
          2,
          'W'
        );
        document.getElementById('power-reactive-r').textContent = formatNumber(
          data.powerReactiveR,
          2,
          'Var'
        );
        document.getElementById('power-apparent-r').textContent = formatNumber(
          data.powerApparentR,
          2,
          'VA'
        );
        document.getElementById('power-factor-r').textContent = formatNumber(
          data.powerFactorR,
          2,
          'PF'
        );

        // Fasa S
        document.getElementById('voltage-s').textContent = formatNumber(
          data.voltageS,
          2,
          'V'
        );
        document.getElementById('current-s').textContent = formatNumber(
          data.currentS,
          2,
          'A'
        );
        document.getElementById('power-active-s').textContent = formatNumber(
          data.powerActiveS,
          2,
          'W'
        );
        document.getElementById('power-reactive-s').textContent = formatNumber(
          data.powerReactiveS,
          2,
          'Var'
        );
        document.getElementById('power-apparent-s').textContent = formatNumber(
          data.powerApparentS,
          2,
          'VA'
        );
        document.getElementById('power-factor-s').textContent = formatNumber(
          data.powerFactorS,
          2,
          'PF'
        );

        // Fasa T
        document.getElementById('voltage-t').textContent = formatNumber(
          data.voltageT,
          2,
          'V'
        );
        document.getElementById('current-t').textContent = formatNumber(
          data.currentT,
          2,
          'A'
        );
        document.getElementById('power-active-t').textContent = formatNumber(
          data.powerActiveT,
          2,
          'W'
        );
        document.getElementById('power-reactive-t').textContent = formatNumber(
          data.powerReactiveT,
          2,
          'Var'
        );
        document.getElementById('power-apparent-t').textContent = formatNumber(
          data.powerApparentT,
          2,
          'VA'
        );
        document.getElementById('power-factor-t').textContent = formatNumber(
          data.powerFactorT,
          2,
          'PF'
        );
      });
    </script>
  </body>
</html>
