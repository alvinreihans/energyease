<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Energy Ease</title>

    <style>
      @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');
      :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --background-color: #f4f7f9;
        --card-bg-color: #ffffff;
        --text-color: #555;
        --light-text: #bdc3c7;
        --border-color: #e0e6ed;
        --shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      }

      body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--background-color);
        margin: 0;
        display: flex;
        min-height: 100vh;
        color: var(--text-color);
        margin-left: 280px;
      }

      .main-content {
        flex: 1;
        padding: 30px;
        overflow-y: auto;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
      }

      .header h1 {
        font-size: 32px;
        font-weight: 600;
        color: var(--secondary-color);
        margin: 0;
      }

      .dashboard-block {
        background-color: var(--card-bg-color);
        border-radius: 12px;
        padding: 25px;
        box-shadow: var(--shadow);
        margin-bottom: 25px;
      }

      .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        text-align: center;
      }

      .summary-item {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
      }

      .summary-item .title {
        font-size: 16px;
        font-weight: 500;
        color: var(--text-color);
      }

      .summary-item .value {
        font-size: 28px;
        font-weight: 600;
        color: var(--primary-color);
      }

      .summary-item .unit {
        font-size: 14px;
        color: #95a5a6;
      }

      .phase-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
      }

      .phase-block {
        background-color: var(--card-bg-color);
        border-radius: 12px;
        padding: 25px;
        box-shadow: var(--shadow);
      }

      .phase-header {
        font-size: 20px;
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 20px;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 10px;
        text-align: center;
      }

      .data-row {
        display: flex;
        justify-content: space-between;
        font-size: 16px;
        padding: 5px 0;
      }

      .data-row .label {
        font-weight: 500;
        color: var(--text-color);
      }

      .data-row .value {
        font-weight: 600;
        color: var(--primary-color);
      }
    </style>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <!-- âœ… gunakan include dengan baseUrl -->
    <%- include('partials/sidebar', { activePage: 'dashboard', baseUrl: baseUrl }) %>

    <div class="main-content">
      <div class="header">
        <h1>DASHBOARD</h1>
        <%- include('partials/logout', { baseUrl: baseUrl }) %>
      </div>

      <!-- Ringkasan -->
      <div class="dashboard-block summary-grid">
        <div class="summary-item">
          <div class="title">Energi Aktif</div>
          <div class="value" id="energy-active">-</div>
          <div class="unit">kWh</div>
        </div>
        <div class="summary-item">
          <div class="title">Energi Reaktif</div>
          <div class="value" id="energy-reactive">-</div>
          <div class="unit">kVarh</div>
        </div>
        <div class="summary-item">
          <div class="title">Faktor Daya Total</div>
          <div class="value" id="total-power-factor">-</div>
          <div class="unit">PF</div>
        </div>
        <div class="summary-item">
          <div class="title">Daya Aktif Total</div>
          <div class="value" id="power-active-total">-</div>
          <div class="unit">W</div>
        </div>
        <div class="summary-item">
          <div class="title">Daya Reaktif Total</div>
          <div class="value" id="power-reactive-total">-</div>
          <div class="unit">Var</div>
        </div>
        <div class="summary-item">
          <div class="title">Daya Semu Total</div>
          <div class="value" id="power-apparent-total">-</div>
          <div class="unit">VA</div>
        </div>
      </div>

      <!-- Per Fasa -->
      <div class="dashboard-block phase-grid">
        <% ['R','S','T'].forEach(f => { %>
        <div class="phase-block">
          <h4 class="phase-header">Fasa <%= f %></h4>
          <div class="data-row"><span class="label">Tegangan:</span><span class="value" id="voltage-<%= f.toLowerCase() %>">- V</span></div>
          <div class="data-row"><span class="label">Arus:</span><span class="value" id="current-<%= f.toLowerCase() %>">- A</span></div>
          <div class="data-row"><span class="label">Daya Aktif:</span><span class="value" id="power-active-<%= f.toLowerCase() %>">- W</span></div>
          <div class="data-row"><span class="label">Daya Reaktif:</span><span class="value" id="power-reactive-<%= f.toLowerCase() %>">- Var</span></div>
          <div class="data-row"><span class="label">Daya Semu:</span><span class="value" id="power-apparent-<%= f.toLowerCase() %>">- VA</span></div>
          <div class="data-row"><span class="label">Faktor Daya:</span><span class="value" id="power-factor-<%= f.toLowerCase() %>">- PF</span></div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- âœ… gunakan baseUrl di socket -->
    <script src="<%= baseUrl %>/socket.io/socket.io.js"></script>
    <script>
      const socket = io(window.location.origin, {
        path: '<%= baseUrl %>/socket.io/',
      });

      socket.on('connect', () => console.log('âœ… Socket.io connected'));
      socket.on('disconnect', () => console.log('âŒ Socket.io disconnected'));

      function formatNumber(value, decimals = 2, unit = '') {
        const num = Number(value);
        if (isNaN(num)) return '-';
        return `${num.toFixed(decimals)}${unit ? ' ' + unit : ''}`;
      }

      socket.on('sensor-data', (data) => {
        console.log('ðŸ“Š Data sensor diterima:', data);

        document.getElementById('energy-active').textContent = formatNumber(data.energyActive);
        document.getElementById('energy-reactive').textContent = formatNumber(data.energyReactive);
        document.getElementById('total-power-factor').textContent = formatNumber(data.totalPowerFactor);
        document.getElementById('power-active-total').textContent = formatNumber(data.powerActiveTotal);
        document.getElementById('power-reactive-total').textContent = formatNumber(data.powerReactiveTotal);
        document.getElementById('power-apparent-total').textContent = formatNumber(data.powerApparentTotal);

        ['r','s','t'].forEach((f, i) => {
          document.getElementById(`voltage-${f}`).textContent = formatNumber(data[`v${i+1}`], 2, 'V');
          document.getElementById(`current-${f}`).textContent = formatNumber(data[`i${i+1}`], 2, 'A');
          document.getElementById(`power-active-${f}`).textContent = formatNumber(data[`p${i+1}`], 2, 'W');
          document.getElementById(`power-reactive-${f}`).textContent = formatNumber(data[`q${i+1}`], 2, 'Var');
          document.getElementById(`power-apparent-${f}`).textContent = formatNumber(data[`s${i+1}`], 2, 'VA');
          document.getElementById(`power-factor-${f}`).textContent = formatNumber(data[`pf${i+1}`], 2, 'PF');
        });
      });
    </script>
  </body>
</html>
